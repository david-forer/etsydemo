<div class = "jumbotron">
  <h2 class = "main-h1">Puppies For Sale in Melbourne</h2>
  <h2 class = "main-h2">Some of the best puppies in the area!</h2>
</div>

<div class="center">
    <div class="row">
        <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %> 
              <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price) %></p>
                <div class = "sold-by"><%= "Sold by: #{listing.user.name}" %></div>
                </div>
          </div>
        </div>
      <% end %>
    </div>
</div>

<p id="notice"><%= notice %></p>


<div>
<br>
<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-default"  %>
<% end %>
<br>
</div>
</div>
