<div class = "container lower">

<h1><b> Puppies that matched your search: </b></h1>

<div class="center">
    <div class="row">
        <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %> 
              <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price) %></p>
                <div class = "sold-by"><%= "Sold by: #{listing.user.name}" %></div>
                </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
</div>