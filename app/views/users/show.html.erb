<div class = "container breeder">

<div class="row">
  <div class="col-md-6">
<!--Image will be displayed here -->

    <%= image_tag @user.image.url(:large) %>
    <br>
    <br>
    <iframe
      width="500"
      height="300"
      frameborder="2" style="border:2"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBnrNEvPPPDZBiQTEUK0FBb90OhGqYGv7Q
        &q=<%= @user.street_address.parameterize %>" allowfullscreen>
    </iframe>
  </div>
  <div class="col-md-6">
    <h2><b>Breeder: </b><%= @user.breeder_name %></h2>
    <h4><b>Street: </b><%= @user.street_address %></h4>
    <h4><b>Suburb: </b> <%= @user.suburb %></h4>
    <h4><b>State: </b><%= @user.state %></h4>
    <h4><b>Clubs: </b><%= @user.clubs %></h4>
    <h4><b>Description: </b><%= @user.description %></h4>
    <h4><b>State Breeder ID: </b><%= @user.breeder_id  %></h4>
    <h4><b>website: </b><%= @user.website %></h4>
    <h4><b>When is next litter: </b><%= @user.next_litter %></h4>
  </div>
</div>

<br>

<% if current_user == @user_id %>
<%= link_to 'Edit', edit_user_path(@listing), class: "btn btn-default"  %> |
<% end %>
<%= link_to 'Back', users_path, class: "btn btn-default"  %>

</div>
